<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security.xsd">

	<http use-expressions="true">
		<csrf disabled="true" />
		
		<intercept-url pattern="/admin"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
			
		<intercept-url pattern="/admin/cat/**/index/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
		<intercept-url pattern="/admin/cat/search/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
			
		<intercept-url pattern="/admin/slide/index/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
			
		<intercept-url pattern="/admin/comment/index/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
		<intercept-url pattern="/admin/comment/search/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
			
		<intercept-url pattern="/admin/book/**/index/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
		<intercept-url pattern="/admin/book/detail/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
		<intercept-url pattern="/admin/book/search/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
			
		<intercept-url pattern="/admin/blog/index/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
		<intercept-url pattern="/admin/blog/detail/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
		<intercept-url pattern="/admin/blog/search/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
			
		<intercept-url pattern="/admin/user/index/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
		<intercept-url pattern="/admin/user/search/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
		<intercept-url pattern="/admin/user/profile"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
		<intercept-url pattern="/admin/user/profile/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
		<intercept-url pattern="/admin/user/edit/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN', 'ROLE_USER')" />
			
		<intercept-url pattern="/admin/book/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN')" />
		<intercept-url pattern="/admin/bill/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN')" />
			
		<intercept-url pattern="/admin/**"
			access="hasAnyRole('ROLE_MOD', 'ROLE_ADMIN')" />
			
		<intercept-url pattern="/**" access="permitAll()" />
					
		
		<form-login login-page='/auth/login' login-processing-url="/auth/login"
			default-target-url="/admin" always-use-default-target="true"
			authentication-failure-url="/auth/login?error=loginErr"
			username-parameter="username" password-parameter="password" />
		<logout logout-url="/auth/logout" logout-success-url="/auth/login"
			delete-cookies="JSESSIONID" invalidate-session="true" />
		<access-denied-handler error-page="/404.html"  />
	</http>
	<beans:bean id="bcryptEncoder"
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"></beans:bean>
	<authentication-manager>
		<!-- authentication from database -->
		<authentication-provider>
			<password-encoder ref="bcryptEncoder"/>
			<jdbc-user-service data-source-ref="ds"
				users-by-username-query="select username, password, enable from users where username = ?"
				authorities-by-username-query="
	                select username, concat('ROLE_', name) as role from users as u 
					inner join roles as r 
					on r.role_id = u.role_id 
					where username = ? and enable = 1" />
		</authentication-provider>
	</authentication-manager>

</beans:beans>